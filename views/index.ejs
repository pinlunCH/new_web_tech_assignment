<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (booking.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">destination</th>
                        <th scope="col">date</th>
                        <th scope="col">employee</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% booking.forEach((booking, index) => { %>
                        <tr>
                            <th scope="row"><%= booking.id %></th>
                            <td><img src="/assets/imgs/<%= booking.image %>" class="rounded-circle booking-img" alt=""></td>
                            <td><%= booking.first_name %></td>
                            <td><%= booking.last_name %></td>
                            <td><%= booking.destination %></td>
                            <td><%= booking.date %></td>
                            <td>@<%= booking.employee_name %></td>
                            <td>
                                <a href="/edit/<%= booking.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= booking.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No booking found. Go <a href="/add" >here</a> to add booking.</p>
        <% } %>
    </div>
</div>
</body>
</html>